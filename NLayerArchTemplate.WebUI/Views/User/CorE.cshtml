@model NLayerArchTemplate.Dtos.User.UserCoreDto

@Html.AntiForgeryToken()

<form id="frmUser">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-3 col-form-label">Kullanıcı Adı (*)</label>
        <div class="col-sm-9">
            <input id="Username" name="Username" class="form-control" pattern="[^'\x22]+" value="@Model.Username" @Html.Raw(Model.Id>0?"readonly":"") />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-3 col-form-label">Şifre (*)</label>
        <div class="col-sm-9">
            <input asp-for="Password" type="password" class="form-control" pattern="[^'\x22]+"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label">Ad (*)</label>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-3 col-form-label">Soyad (*)</label>
        <div class="col-sm-9">
            <input asp-for="Surname" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
         <label class="col-sm-3 col-form-label">Aktif</label>
        <div class="col-sm-1">
            <input id="IsActive" name="IsActive" type="checkbox" class="form-control" value="true" @(Model.IsActive ? "checked" : "") />
        </div>
    </div>
</form>
